{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts", "src/spec/**/*.ts"],
  "exclude": ["node_modules", "spec/helpers/junit.js"]
}
